<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.iotlab.blelocalization_04_navbox.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/textView" />

    <ToggleButton
        android:text="Save off"
        android:layout_width="50dp"
        android:textSize="6sp"
        android:layout_height="wrap_content"
        android:id="@+id/tbtn_save"
        android:checked="false"
        android:textOff="Save off"
        android:textOn="Saving"
        android:layout_below="@+id/tv_info"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Shot"
        android:textSize="6sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tbtn_save"
        android:layout_toEndOf="@+id/tbtn_save"
        android:id="@+id/btn_error_shot"
        android:layout_below="@+id/tv_info" />

    <Button
        android:text="Clear"
        android:textSize="6sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_error_clearAndSave"
        android:layout_alignBottom="@+id/tbtn_save"
        android:layout_toEndOf="@+id/btn_error_undo"
        android:layout_below="@+id/tv_info" />

    <Button
        android:text="Shot2"
        android:textSize="6sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_error_shot2"
        android:layout_alignBottom="@+id/tbtn_save"
        android:layout_toEndOf="@+id/btn_error_clearAndSave"
        android:layout_below="@+id/tv_info" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Undo"
        android:textSize="6sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_error_undo"
        android:layout_alignBottom="@+id/tbtn_save"
        android:layout_toEndOf="@+id/btn_error_shot"
        android:layout_below="@+id/tv_info" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_info"
        android:layout_weight="1.4"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_height="100dp" />

    <Button
        android:text="Null"
        android:layout_width="50dp"
        android:id="@+id/button"
        android:layout_below="@+id/tbtn_save"
        android:layout_alignParentStart="true"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btn_MUupdate"
        android:text="StMu"
        android:textSize="6sp"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/tbtn_En_scale"
        android:layout_toEndOf="@+id/tbtn_En_scale" />

    <ToggleButton
        android:text="En_Scale"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:textSize="6sp"
        android:checked="false"
        android:id="@+id/tbtn_En_scale"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button" />


</RelativeLayout>
